<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu2"
    tools:context=".fragment.walkthrough.page2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/dimen279"
            android:layout_height="@dimen/dimen209"
            android:layout_marginTop="@dimen/dimen112"
            android:src="@drawable/img_page2"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen20"
            android:text="Mulai Untuk Mengenal..."
            android:textColor="@color/black"
            android:textSize="@dimen/dimensp28"
            android:textStyle="normal"
            android:layout_marginLeft="@dimen/dimen48"
            android:layout_below="@id/img1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16"
            android:text="Aplikasi ini Berisi \nProfile Pribadi Saya"
            android:textColor="@color/black"
            android:textSize="@dimen/dimensp32"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dimen48"
            android:layout_below="@id/text1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16"
            android:text="Mari Kita Mulai \nMengenal Zaenal Anzarry Lebih Dekat"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen16"
            android:layout_marginLeft="@dimen/dimen48"
            android:layout_below="@id/text2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text3"
            android:layout_marginTop="@dimen/dimen150"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dimen16"
                android:layout_height="@dimen/dimen16"
                android:layout_weight="1"
                android:src="@drawable/circle_white" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dimen16"
                android:layout_height="@dimen/dimen16"
                android:layout_marginLeft="@dimen/dimen4"
                android:layout_weight="1"
                android:src="@drawable/circle_black" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/dimen16"
                android:layout_height="@dimen/dimen16"
                android:layout_marginLeft="@dimen/dimen4"
                android:layout_weight="1"
                android:src="@drawable/circle_white" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>